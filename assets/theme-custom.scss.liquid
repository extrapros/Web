h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5{ font-weight: bold;}


/*================ Accordian ================*/
.product__description.rte{
    .accordion {
        background-color: #fff;
        cursor: pointer;
        padding: 10px;
        width: 100%;
        text-align: left;
        border: none;
        border-top: 1px solid $lt-grey;
        outline: none;
        transition: 0.4s;
        font-weight: bold;
    }

    .active, .accordion:hover {
        background-color: $off-wht;
    }

    .panel {
        padding: 10px 10px;
        background-color: white;
        display: none;
        overflow: hidden;
        p{ font-size: 1.25rem;}
    }
    button{ font-size: 1.25rem;}
    button.accordion:after {
        content: '\002B';
        color: $settings-color-primary;
        font-weight: bold;
        float: right;
        margin-left: 5px;
    }
    button.accordion.active:after {
        content: "\2212";
    }
    .accordion:first-child{ margin-top:20px;}
    .accordion:last-child{ border-bottom: 1px solid $lt-grey;}
}

