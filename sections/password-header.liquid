{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<header class="password-header text-center" data-section-id="{{ section.id }}" data-section-type="password-header">
  {% if section.settings.logo %}
    {% capture image_size %}{{ section.settings.logo_max_width }}x{% endcapture %}
    <a href="/">
    <img src="{{ section.settings.logo | img_url: image_size }}" alt="{{ section.settings.logo.alt | default: langify_shop_name }}" itemprop="logo">
    </a>
  {% else %}
    <h1 class="password-header__shop-name h4">{{ langify_shop_name }}</h1>
  {% endif %}
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "logo_max_width",
      "label": "Custom logo width (in pixels)",
      "default": "100"
    }
  ]
}
{% endschema %}
